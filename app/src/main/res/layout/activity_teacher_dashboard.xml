<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#E3F2FD">

    <TextView
        android:id="@+id/bufferDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teacher: \nRemaining Buffer: "
        android:textSize="20sp"
        android:padding="20dp"
        android:gravity="center"
        android:textColor="#000"
        android:background="#BBDEFB"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/inputDeduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter minutes to deduct"
        android:inputType="number"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/deductBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deduct Time"
        android:textColor="#FFF"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/refreshBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh Buffer"
        android:textColor="#FFF"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="#FFF"
        android:backgroundTint="#4CAF50" />

</LinearLayout>
